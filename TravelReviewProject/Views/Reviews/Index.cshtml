@model IEnumerable<TravelReviewProject.Models.Review>

@{
    ViewBag.Title = "Index";
}
<div class="reviews">
    <h2>Our Reviews</h2>

    <p>
        @Html.ActionLink("Submit a Review", "Create", "Reviews", null, new { @class = "btn btn-xl btn-default" })
    </p>

    @*Index page shows a brief summary for each review using this loop*@

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>"@Html.DisplayFor(modelItem => item.ReviewTitle)" by @Html.DisplayFor(modelItem => item.UserName)</h3>
                        <p>Reviewed @Html.DisplayFor(modelItem => item.NameOfPlace) in @Html.DisplayFor(modelItem => item.LocationOfPlace)</p>
                        <p>Visited on @Html.DisplayFor(modelItem => item.DateOfVisit) and scored it @Html.DisplayFor(modelItem => item.Score.ScoreID)/10</p>
                        @Html.ActionLink("See Full Review", "Details", "Reviews", new { id = item.ReviewID }, new { @class = "btn btn-lg btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>